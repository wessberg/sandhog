{
	"name": "@wessberg/scaffold",
	"version": "1.0.30",
	"bin": {
		"scaffold": "bin/scaffold"
	},
	"files": [
		"dist/**/*.*",
		"bin/**/*"
	],
	"description": "A virtual Open Source project maintainer",
	"scripts": {
		"generate:changelog": "standard-changelog --first-release",
		"generate:scaffold": "bin/scaffold all --yes",
		"generate:all": "pnpm run generate:scaffold && pnpm run generate:changelog",
		"clean:dist": "rm -rf dist",
		"clean": "pnpm run clean:dist",
		"lint": "tsc --noEmit && eslint \"src/**/*.ts\" --color",
		"prettier": "prettier --write '{src,test,documentation}/**/*.{js,ts,json,html,xml,css,md}'",
		"tsc:test": "tsc --module commonjs",
		"test": "ava",
		"prebuild": "npm run clean:dist",
		"build": "pnpm run rollup",
		"watch": "pnpm run rollup -- --watch",
		"rollup": "rollup -c rollup.config.js",
		"preversion": "pnpm run lint && NODE_ENV=production pnpm run build",
		"version": "pnpm run generate:all && git add .",
		"release": "np --no-cleanup --no-yarn",
		"update": "pnpx npm-check-updates -u -x np && pnpm update && pnpm install"
	},
	"keywords": [
		"open source",
		"project",
		"scaffold",
		"code of conduct",
		"contributing",
		"readme",
		"codegen",
		"maintainers",
		"backers"
	],
	"dependencies": {
		"@types/prettier": "^2.0.1",
		"chalk": "^4.1.0",
		"commander": "^5.1.0",
		"eslint": "^7.4.0",
		"inquirer": "^7.3.0",
		"json5": "^2.1.3",
		"yaml": "^1.10.0",
		"markdown-toc": "^1.2.0",
		"prettier": "^2.0.5"
	},
	"devDependencies": {
		"@types/eslint": "^7.2.0",
		"@types/inquirer": "^6.5.0",
		"@types/json5": "^0.0.30",
		"@types/yaml": "^1.9.7",
		"@typescript-eslint/eslint-plugin": "^3.5.0",
		"@typescript-eslint/parser": "^3.5.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jsdoc": "^28.6.1",
		"@wessberg/rollup-plugin-ts": "^1.2.27",
		"@wessberg/ts-config": "^1.0.16",
		"ava": "^3.9.0",
		"husky": "^4.2.5",
		"magic-string": "^0.25.7",
		"np": "5.2.1",
		"pretty-quick": "^2.0.1",
		"rollup": "^2.18.2",
		"standard-changelog": "^2.0.24",
		"typescript": "^3.9.6",
		"pnpm": "^5.2.6",
		"tslib": "^2.0.0",
		"ts-node": "^8.10.2"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"browser": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"typings": "./dist/index.d.ts",
	"es2015": "./dist/index.js",
	"funding": {
		"type": "github",
		"url": "https://github.com/wessberg/scaffold?sponsor=1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/wessberg/scaffold.git"
	},
	"bugs": {
		"url": "https://github.com/wessberg/scaffold/issues"
	},
	"contributors": [
		{
			"name": "Frederik Wessberg",
			"email": "frederikwessberg@hotmail.com",
			"url": "https://github.com/wessberg",
			"imageUrl": "https://avatars2.githubusercontent.com/u/20454213?s=460&v=4",
			"role": "Lead Developer",
			"twitter": "FredWessberg",
			"github": "wessberg"
		}
	],
	"engines": {
		"node": ">=10.0.0"
	},
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"ava": {
		"files": [
			"test/**/**.test.ts"
		],
		"verbose": true,
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register/transpile-only"
		]
	}
}
